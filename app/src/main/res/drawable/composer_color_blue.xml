<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- outer circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#000" />
        </shape>
    </item>

    <!-- inner shadow of outer circle -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#fff" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="#0ff" />
        </shape>
    </item>

    <!-- center circle -->
    <item
        android:bottom="24dp"
        android:left="24dp"
        android:right="24dp"
        android:top="24dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#fff" />
            <gradient
                android:angle="270"
                android:endColor="#fff"
                android:startColor="#fff" />
        </shape>
    </item>

</layer-list>